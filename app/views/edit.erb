
<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Edit your recipe here:
      <p>Name: <input type="text" value="<%= @recipe.name %>" name="name"></p>
      <p>Ingredients: <input type="text" value="<%= @recipe.ingredients %>" name="ingredients"></p>
      <p>Cook time: <input type="text" value="<%= @recipe.cook_time %>" name="cook_time"></p>
    </p>
    <input type="submit" value="submit">
</form>
